  <div class="container">
    <h1>Community Posts</h1>
    <a id="newPostBtn" href="/new">New Post</a>
    <ul id="postsList">
      <% posts.forEach(post=> { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <small>
            <%=post.comment_date %>
          </small>
          <p>
            <%=post.msg%>
          </p>
          <small>By: <%=post.user_name%> </small>
        
          <% if(name === post.user_name) { %>
            <a class="edit" href="/edit/<%= post.id %>">Edit</a>
            <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
            <% } %>
        </li>
        <% }); %>
    </ul>
