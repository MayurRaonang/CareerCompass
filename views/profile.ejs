            <li><a href="./home.html">Home</a></li>
            <li><a href="./assesment.html">Assesment</a></li>
            <li><a href="">Explore</a></li>
            <li><a href="./resource.html">Resources</a></li>
            <li><a href="">Comunity</a></li>
            <li><a href="">Profile</a></li>
        </ul>
        <ul>
          <!-- <form action="/login" method="GET"><button type="submit">Assesment</button></form> -->
            <li id="logo"><form action="/" method="GET"><button type="submit">Career Compass</button></form></li>
            <li class="hide"><form action="/" method="GET"><button type="submit">Home</button></form></li>
            <li class="hide"><form action="/assesment" method="GET"><button type="submit">Assesment</button></form></li>
            <li class="hide"><form action="/explore" method="GET"><button type="submit">Explore</button></form></li>
            <li class="hide"><form action="/resource" method="GET"><button type="submit">Resource</button></form></li>
            <li class="hide"><form action="/comunity" method="GET"><button type="submit">Comunity</button></form></li>
            <li class="hide profile"><form action="/profile" method="GET"><button type="submit">Profile</button></form></li>
            <li class="hamburger" onclick=showSidebar()><a href="#"><svg style="color: black;" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#000000"><path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/></svg></a></li>
        </ul>
    </nav>
    <div class="header">
        <div class="profile-section">
            <% if(locals.profilepic){ %>
                <img src="<%= profilepic %>" alt="Profile picture" class="profile-image" id="pro"> 
            <% }else{ %>
                <form action="/profilepic" method="post" enctype="multipart/form-data">
                    <div class="profile-image">
                        <input type="file" name="profileImage">
                        <button type="submit">upload</button>
                    </div>
                </form>
                <% } %>
            
            <div class="profile-info">
                <h1><%= name %></h1>
                <p>ID: CareerGuidance<%= id %></p>
            </div>
            <a class="logoutbtn" href="/logout" role="button">Log Out</a>
        </div>
    </div>

    <div class="container">
        <div class="profile_sidebar">
            <a href="#basic-info" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                Basic Info
            </a>
            <a href="#points" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 15l-2-5 5-2-2 5 2 5-5 2 2-5z"></path>
                </svg>
                Points
            </a>
            <a href="#lab" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 3v15m0 0a3 3 0 1 0 6 0M9 18c0 1.657 1.343 3 3 3s3-1.343 3-3"></path>
                </svg>
                Lab
            </a>
            <a href="#privacy" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
                Privacy
            </a>
            <a href="#notifications" class="nav-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                    <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                </svg>
                Notifications
            </a>
        </div>

        <main class="main-content">
            <h2 class="section-title">Basic Info</h2>

            <!-- Name -->
            <div class="form-group">
                <div class="form-control">
                    <label class="form-label">Name</label>
                    <p id="titlename"><%= locals.name ? name : "please enter your name" %><p></p>
                    <form class="edit" action="/edit" method="post">
                        <input type="hidden" name="updatedItemId" value="name">
                        <input id="inputname" class="form-input" type="text" name="updatedItemTitle" value="<%= locals.name %>" autocomplete="off" hidden="true" />
                        <button id="donename" class="edit-button" type="submit" hidden><img class="icon" src="/assets/icons/check-solid.svg" alt="tick image"></button>
                    </form>
                </div>
                <button id="editname" class="edit-button" onclick="handler('name')"><img class="icon" src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
            </div>

            <!-- Location -->
            <div class="form-group">
                <div class="form-control">
                    <label class="form-label"><h3>Location</h3></label>
                    <p id="titlelocation"><%= locals.location ? location : "please enter your location" %><p>
                    <form class="edit" action="/edit" method="post">
                        <input type="hidden" name="updatedItemId" value="address">
                        <input id="inputlocation" class="form-input" type="text" name="updatedItemTitle" value="<%= locals.location %>" autocomplete="off" hidden="true" />
                        <button id="donelocation" class="edit-button" type="submit" hidden><img class="icon" src="/assets/icons/check-solid.svg" alt="tick image"></button>
                    </form>
                </div>
                <button id="editlocation" class="edit-button" onclick="handler('location')"><img class="icon" src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
            </div>

            <!-- Education -->
            <div class="form-group">
                <div class="form-control">
                    <label class="form-label">Education</label>
                    <p id="titleeducation"><%= locals.education ? education : "please enter education details" %><p>
                    <form class="edit" action="/edit" method="post">
                        <input type="hidden" name="updatedItemId" value="education">
                        <input id="inputeducation" class="form-input" type="text" name="updatedItemTitle" value="<%= locals.education %>" autocomplete="off" hidden="true" />
                        <button id="doneeducation" class="edit-button" type="submit" hidden><img class="icon" src="/assets/icons/check-solid.svg" alt="tick image"></button>
                    </form>
                </div>
                <button id="editeducation" class="edit-button" onclick="handler('education')"><img class="icon" src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
            </div>

            <!-- Contact Number -->
            <div class="form-group">
                <div class="form-control">
                    <label class="form-label">Contact Number</label>
                    <p id="titlecontactno"><%= locals.contactno ? "91+"+contactno : "__________" %><p></p>
                    <form class="edit" action="/edit" method="post">
                        <input type="hidden" name="updatedItemId" value="phone_no">
                        <input id="inputcontactno" class="form-input" type="text" name="updatedItemTitle" value="<%= locals.contactno %>" autocomplete="off" hidden="true" />
                        <button id="donecontactno" class="edit-button" type="submit" hidden><img class="icon" src="/assets/icons/check-solid.svg" alt="tick image"></button>
                    </form>
                </div>
                <button id="editcontactno" class="edit-button" onclick="handler('contactno')"><img class="icon" src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
            </div>

            <!-- Summary -->
            <div class="form-group">
                <div class="form-control">
                    <label class="form-label">Summary</label>
                    <p id="titlesummary"><%= locals.summary ? summary : "Tell us about yourself (interests, experience, etc.)" %></p>
                    <form class="edit" action="/edit" method="post">
                        <input type="hidden" name="updatedItemId" value="summary">
                        <textarea id="inputsummary" class="form-input" type="text" name="updatedItemTitle" value="<%= locals.education %>" autocomplete="off" hidden="true" placeholder="Tell us about yourself (interests, experience, etc.)"></textarea>
                        <button id="donesummary" class="edit-button" type="submit" hidden><img class="icon" src="/assets/icons/check-solid.svg" alt="tick image"></button>
                    </form>
                </div>
                <button id="editsummary" class="edit-button" onclick="handler('summary')"><img class="icon" src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
            </div>

            <!-- Linked In -->
            <div class="form-group">
                <div class="form-control">
                    <label class="form-label">Linked In</label>
                    <div class="input-with-icon">
                        <p id="titlelinkedin"><%= locals.linkedin ? linkedin : "please enter your linked link along with https//:" %><p>
                            <form class="edit" action="/edit" method="post">
                                <input type="hidden" name="updatedItemId" value="linkedin">
                                <input id="inputlinkedin" class="form-input" type="text" name="updatedItemTitle" value="<%= locals.linkedin %>" autocomplete="off" hidden="true" />
                                <button id="donelinkedin" class="edit-button" type="submit" hidden><img class="icon" src="/assets/icons/check-solid.svg" alt="tick image"></button>
                            </form>
                        <a href = "<%= linkedin %>" ><svg  viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                            <polyline points="15 3 21 3 21 9"></polyline>
                            <line x1="10" y1="14" x2="21" y2="3"></line>
                        </svg></a>
                    </div>
                </div>
                <button id="editlinkedin" class="edit-button" onclick="handler('linkedin')"><img class="icon" src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
            </div>
        </main>
    </div>
